<h4 class="title">商品詳細</h4>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "300x250" %>
    </div>
    <div class="col-lg-5">
      <table class="table">
        <tr>
         <th>商品名</th>
         <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre_id %></td>
        </tr>
        <tr>
          <th>税込価格</br>
          (税抜価格)</th>
          <td><%= @price.to_i %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
        <th>販売ステータス</th>
        <% if @item.is_active %>
          <td><font color="green">販売中</font></td>
          <% else %>
          <td>販売停止中</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="text-center">
<%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success'  %>
</div>

</div>