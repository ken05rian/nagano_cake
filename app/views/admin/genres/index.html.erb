<h4 class="title">ジャンル一覧・追加</h4>

<div class="container">
  <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
  <div class="row justify-content-center">
  <div class="col-2">
    <div class="form-group">
  <%= f.label :ジャンル名 %>
   </div>
  </div>

  <div class="col-3">
    <div class="form-group">
  <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="col-2">
    <div class="form-group">
  <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
 </div>

 </div>
 <% end %>

 <div class="row justify-content-center">
   <div class="col-6">
   <table class="table table-striped">
     <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td></td>
          <td>
            <%= genre.name %>
          </td>
          <td></td>
          <td>
            <%=  link_to "編集する",edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
          </td>
        </tr>
        <% end %>
      </tbody>
   </table>

   </div>
 </div>


</div>
</div>