<h4 class="title">配送先編集</h4>

<div class="container">
  <%= form_with model: @address, url:address_path(@address), local:true do |f| %>
  <div class="row justify-content-center">
  <div class="col-8">
   <table class="table">
     <tr>
       <th><%= f.label :郵便番号（ハイフンなし）　%></th>
       <td><%= f.text_field :postal_code %></td>
     </tr>
     <tr>
       <th><%= f.label :住所 %></th>
       <td><%= f.text_field :address, class: "col-auto w-100" %></td>
     </tr>
     <tr>
       <th><%= f.label :宛名　%></th>
       <td><%= f.text_field :name %></td>
     </tr>

   </table>

    <div class="text-center">
    <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
    </div>

 </div>
 </div>
 <% end %>


</div>