<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
              <a class="navbar-brand p-3" href="/">
                <i class="fas fa-birthday-cake">NAGANO</i>
              </a>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="nav-list">
               <% if customer_signed_in? %>
               <li class="nav-item">
                 <%= "ようこそ、#{current_customer.first_name}さん！" %>
               </li>
               <li class="nav-item">
                 <%= link_to "マイページ", customer_path(current_customer.id), class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "商品一覧", items_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "カート", cart_items_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <% elsif admin_signed_in? %>
               <li class="nav-item">
                 <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "注文履歴一覧", admin_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <% else %>
               <li class="nav-item">
                 <%= link_to "About", about_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "商品一覧", items_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
               <li class="nav-item">
                 <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark btn btn-outline-dark' %>
               </li>
              <% end %>
              </ul>
            </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
