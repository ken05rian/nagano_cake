<h4 class="title">注文履歴一覧</h4>

<div class="container">
  <div class="row">
    <div class="col-7">
      <h6>注文情報</h6>
      <table border="1">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <h6>請求情報</h6>
      <table border="1">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment+800 %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h6>注文内容</h6>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>合計</th>
          </tr>
        </thead>
        <tbody>
           <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.item.price*order_detail.amount %></td>
          <% end %>
        </tr>
        </tbody>


    </div>

  </div>
</div>