<h4 class="title">注文履歴一覧</h4>

<div class="container">
  <div class="row">
    <table class="table">
       <thead>
         <tr>
           <th width="180">注文日</th>
           <th width="400">配送先</th>
           <th width="150">注文商品</th>
           <th width="100">支払金額</th>
           <th width="150">ステータス</th>
           <th width="200">注文詳細</th>
         </tr>
       </thead>
       <tbody>
         <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
           <td>〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %></td>
           <td><% order.order_details.each do |order_detail| %>
                   <%= order_detail.item.name %><br>
               <% end %>
           </td>
           <td><%= order.total_payment+800 %>円</td>
           <td><%= order.status %></td>
           <td><%= link_to "表示する", order_path(order), class: 'btn btn-sm btn-primary' %></td>
         </tr>
         <% end %>
       </tbody>
    </table>
  </div>
</div>