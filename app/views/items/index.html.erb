<h4 class="title">商品一覧(全<%= @items.total_count %>件）</h4>



<div class="container">
  <div class="row justify-content-center">
    <% @items.each do |item| %>

  <div class="col-3">
    <div class="item-list">

     <div class="item-image">
       <%= link_to item_path(item.id) do %>
       <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg",size: "200x150" %>
       <% end %>
      </div>
     <div class="item-name">
       <%= item.name %>
     </div>
     <div class="item-price">
       <%= item.price %>円
     </div>

    </div>
  </div>
   <% end %>
  </div>
</div>

<%= paginate @items %>