<h4 class="title">会員情報編集</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <div class="container">
  <%= form_with model: @customer, url: edit_customer_path(@customer.id), local:true do |f| %>

 <div class="row">
   <div class="col-lg-8">
     <table class="table">
         <tr>
         <th><%= f.label :名前 %></th>
         <td>(姓)<%= f.text_field :first_name, autofocus: true %>
             (名)<%= f.text_field :last_name, autofocus: true %></td>
       </tr>
       <tr>
         <th><%= f.label :フリガナ %></th>
         <td>(セイ)<%= f.text_field :first_name_kana, autofocus: true %>
            (メイ)<%= f.text_field :last_name_kana, autofocus: true %></td>
       </tr>
       <tr>
         <th><%= f.label :郵便番号（ハイフンなし） %></th>
         <td><%= f.text_field :postal_code %></td>
       </tr>
       <tr>
         <th><%= f.label :住所 %></th>
         <td><%= f.text_field :address, class: "col-auto w-100" %></td>
       </tr>
       <tr>
         <th><%= f.label :電話番号（ハイフンなし）%></th>
         <td><%= f.number_field :telephone_number %></td>
       </tr>
       <tr>
         <th><%= f.label :メールアドレス %></th>
         <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
       </tr>
    </table>

   </div>

<% end %>

 </div>

<table>
  <tr>
    <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
    <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
  </tr>
</table>

<% end %>

</div>

