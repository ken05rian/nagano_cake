<h4 class="title">マイページ</h4>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h5 class="registration-information">登録情報</h5>
      <%= link_to "編集する", edit_customer_registration_path(@customer.id), class: 'btn btn-success'  %>
      <table border="1">
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %>  <%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <h5 class="address">配送先</h5>
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary'  %></br>

       <h5 class="order">注文履歴</h5>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary'  %>
    </div>
  </div>
</div>